{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "removeComments": true
  },
  "lib": [
    "DOM",
    "ES2015",
    "ES2020"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
